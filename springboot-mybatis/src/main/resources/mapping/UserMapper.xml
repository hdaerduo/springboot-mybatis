<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tingmou.ssm.dao.UserMapper">

	<select id="getUsers" resultType="com.tingmou.ssm.model.User">
		select * from user;
	</select>

	<select id="getUser" resultType="com.tingmou.ssm.model.User">
		select * from user where id=#{id}
	</select>
	<update id="saveUser" parameterType="com.tingmou.ssm.model.User">
		update user set
		name=#{name},
		callId = #{callId},
		description = #{description},
		age = #{age}
		Where id=#{id}
	</update>
	<insert id="createUser" parameterType="com.tingmou.ssm.model.User">
	insert into user 
	(name,callId,description,age) 
	values (#{name},#{callId},#{description},#{age})
	</insert>

</mapper>